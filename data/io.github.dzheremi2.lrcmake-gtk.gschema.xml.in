<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="lrcmake">
	<schema id="@APP_ID@" path="@PREFIX@/">
		<key name="auto-file-manipulation" type="b">
			<default>false</default>
		</key>
		<key name="auto-file-format" type="s">
			<choices>
				<choice value=".lrc" />
				<choice value=".txt" />
			</choices>
			<default>".lrc"</default>
		</key>
		<key name="reset-quick-edit-on-close" type="b">
			<default>true</default>
		</key>
		<key name="cache-songs" type="b">
			<default>false</default>
		</key>
		<key name="cache-covers" type="b">
			<default>false</default>
		</key>
		<key name="auto-cache-opened-dirs" type="b">
			<default>false</default>
		</key>
	</schema>

	<schema id="@APP_ID@.State" path="@PREFIX@/State/">
		<key name="sorting" type="s">
			<choices>
				<choice value="a-z" />
				<choice value="z-a" />
			</choices>
			<default>"a-z"</default>
		</key>
		<key name="opened-dir-path" type="s">
			<default>"None"</default>
		</key>
	</schema>
</schemalist>
